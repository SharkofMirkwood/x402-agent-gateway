{
  "name": "x402-agent-gateway-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "tests/integration"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:integration": "npm run test -w tests/integration",
    "test:integration:docker": "docker-compose up --build integration-tests",
    "example:backend": "npm run dev -w examples/backend",
    "example:frontend": "npm run dev -w examples/frontend"
  }
}
